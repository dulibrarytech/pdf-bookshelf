<% include partials/header.ejs %>
<body>
<div class="wrapper">

    <% include partials/app-name.ejs %>

    <!-- Sidebar -->
    <div class="sidebar sidebar-style-2">
        <div class="sidebar-wrapper scrollbar scrollbar-inner">
            <div class="sidebar-content">
                <% include partials/menu-profile.ejs %>
                <% include partials/nav.ejs %>
            </div>
        </div>
    </div>
    <!-- End Sidebar -->

    <div class="main-panel">
        <div class="content">
            <div id="message"></div>
            <div class="page-inner" id="uploads" style="visibility: hidden">
                <div class="page-header">
                    <h4 class="page-title">Dashboard - Upload</h4>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">PDF Uploads</h4>
                            </div>
                            <span class="dz-message"></span>
                            <div class="card-body">
                                <div id="message"></div>
                                <div id="preview-template" style="display: none;">

                                    <div id="template" class="file-row">
                                        <hr>
                                        <div>
                                            <p class="name" data-dz-name></p>
                                            <strong class="error text-danger" data-dz-errormessage></strong>
                                        </div>
                                        <div>
                                            <p class="size" data-dz-size></p>
                                        </div>
                                        <div>
                                            <button data-dz-remove class="btn btn-danger delete">
                                                <i class="glyphicon glyphicon-trash"></i>
                                                <span>Remove</span>
                                            </button>
                                        </div>
                                    </div>

                                </div>
                                <form class="dropzone" id="dropzone" action="/uploads" method="post"
                                      enctype="multipart/form-data"></form>
                                <br>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <br>
                                <div id="upload-status"></div>
                                <br>
                                <button id="upload-button" class="btn btn-default" type="button"><i class="fa fa-upload"></i>&nbsp;&nbsp;Begin Upload</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include partials/footer.ejs %>
    </div>
    <!-- End Custom template -->
</div>
<!--   Core JS Files   -->
<script src="../assets/js/core/jquery.3.2.1.min.js"></script>
<script src="../assets/js/core/popper.min.js"></script>
<script src="../assets/js/core/bootstrap.min.js"></script>

<!-- jQuery UI -->
<script src="../assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
<script src="../assets/js/plugin/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js"></script>

<!-- jQuery Scrollbar -->
<script src="../assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>

<!-- Bootstrap Notify -->
<script src="../assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>

<!-- Sweet Alert -->
<script src="../assets/js/plugin/sweetalert/sweetalert.min.js"></script>

<script src="../assets/js/plugin/dropzone/dist/dropzone.js"></script>

<!-- Atlantis JS -->
<script src="../assets/js/atlantis.min.js"></script>
<script src="../libs/dompurify/purify.min.js"></script>
<script src="../app/dom.module.js"></script>
<script src="../app/config.module.js"></script>
<script src="../app/api.module.js"></script>
<script src="../app/helper.module.js"></script>
<script src="../app/http.module.js"></script>
<script src="../app/user.module.js"></script>
<script>
    helperModule.upload();
    helperModule.onLoadVisibility('#uploads', 250);
</script>
</body>
</html>
